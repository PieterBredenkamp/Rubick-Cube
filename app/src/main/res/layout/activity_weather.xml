<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#008cb2" tools:context=".CreateEvent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#00c8ff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView">

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weather:"
        android:background="@drawable/shape_2"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:elevation="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tuesday *Today*"
        android:id="@+id/textView4"
        android:layout_marginTop="80dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wednesday"
        android:id="@+id/textView5"
        android:layout_marginTop="130dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thursday"
        android:id="@+id/textView6"
        android:layout_marginTop="180dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friday"
        android:id="@+id/textView7"
        android:layout_marginTop="230dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saturday"
        android:id="@+id/textView8"
        android:layout_marginTop="280dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sunday"
        android:id="@+id/textView9"
        android:layout_marginTop="330dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monday"
        android:id="@+id/textView10"
        android:layout_marginTop="380dp"
        android:textColor="#1444cc"
        android:layout_marginLeft="5dp" />

</RelativeLayout>
